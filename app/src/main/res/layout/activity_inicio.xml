<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juliana.teste.Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F62536"
        android:gravity="center"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="#F62536"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text=" Atrações em Curitiba"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ImagemUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="Lixo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:background="@layout/roundcorner"
            android:src="@drawable/user"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F62536"
        android:gravity="center">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_de_eventos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F62536"
        android:gravity="center"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F62536"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/inicio"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem3"
            android:background="@layout/roundcorner2"

            />
        <ImageButton
            android:id="@+id/favorito"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem1"
            android:background="@layout/roundcorner2"
            android:onClick="Favoritoo"
            />
        <ImageButton
            android:id="@+id/cadastro"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem2"
            android:background="@layout/roundcorner2"
            android:onClick="Cadastroo"
            />

        <ImageButton
            android:id="@+id/editar"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem4"
            android:background="@layout/roundcorner2"
            android:onClick="Editarr"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F62536"
        android:gravity="center"
        >
    </LinearLayout>


</LinearLayout>
