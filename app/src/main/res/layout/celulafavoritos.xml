<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_evento_favorito"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/cadastro"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center">
        <TextView
            android:id="@+id/nome_evento_favorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="nome"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/data_evento_favorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="data"
            android:textAlignment="center"
            android:textSize="22sp" />
            </LinearLayout>
        <ImageButton
            android:id="@+id/btn_evento_favorito"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/xrosa2"
            android:background="@layout/roundcorner2"
            />

    </LinearLayout>

    <View   android:id="@+id/firstDivider2"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#090808" />


</LinearLayout>
